@model E_Commerce.WebUI.Models.PageListViewModel
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                 
                    var data = Model.CurrentPage - 1;
                
                <li class="page-item"><a class="page-link" href="/product/index?page=@data">Previous</a></li>

            }

            @foreach (var item in Model.Pages)
            {
                @if (Model.CurrentPage == item )
                {
                    <li class="page-item active"><a class="page-link" href="/product/index?page=@item">@item</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="/product/index?page=@item">@item</a></li>
                }

            }
            @{ 
                var last = Model.Pages.Last();


}
            @if (last != Model.CurrentPage) {
                var data = Model.CurrentPage + 1;
               <li class="page-item"><a class="page-link" href="/product/index?page=@data">Next</a></li>
            }
            
            
        </ul>
    </nav>

